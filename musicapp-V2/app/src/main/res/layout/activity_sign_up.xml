<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity" android:background="@drawable/teal3">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText_user"
            tools:text="Email id"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="21dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:autofillHints="" android:layout_marginTop="194dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/editText_password"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText_password"
            android:textStyle="bold"
            android:textSize="24sp"
            tools:text="Password"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:autofillHints=""
            app:layout_constraintTop_toBottomOf="@+id/editText_user" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_sign_up"/>

    <Button
            android:text="@string/sign_up"
            android:layout_width="416dp"
            android:layout_height="64dp"
            android:id="@+id/btn_sign_up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="83dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_login"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:textStyle="bold"
            android:textSize="24sp" android:layout_marginBottom="228dp"/>


</android.support.constraint.ConstraintLayout>